// Standard single declaration per line
var a1 = 5;
var a2 = "string";
var a3 = nil;
var a4 = false;
var a5 = true;
var a6;
print("Single dec per line: ");
print("a1=" + tostr(a1) + ", ");
print("a2=" + tostr(a2) + ", ");
print("a3=" + tostr(a3) + ", ");
print("a4=" + tostr(a4) + ", ");
print("a5=" + tostr(a5) + ", ");
printl("a6=" + tostr(a6));
assert(a1 == 5);
assert(a2 == "string");
assert(a3 == nil);
assert(a4 == false);
assert(a5 == true);
assert(a6 == nil);

// Reassign non-fixed variables
a1 = 1;
a2 = 1;
a3 = 1;
a4 = 1;
a5 = 1;
a6 = 1;
print("Single dec per line (reassign): ");
print("a1=" + tostr(a1) + ", ");
print("a2=" + tostr(a2) + ", ");
print("a3=" + tostr(a3) + ", ");
print("a4=" + tostr(a4) + ", ");
print("a5=" + tostr(a5) + ", ");
printl("a6=" + tostr(a6));
assert(a1 == 1);
assert(a2 == 1);
assert(a3 == 1);
assert(a4 == 1);
assert(a5 == 1);
assert(a6 == 1);






// Multiple declarations in a single line
