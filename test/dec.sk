assert(b4 == 1);
assert(b5 == 1);
assert(b6 == 1);




// Standard single declaration of fixed variables per line
fixed var c1 = 5;
fixed var c2 = "string";
fixed var c3 = nil;
fixed var c4 = false;
fixed var c5 = true;
fixed var c6; // should be nil
print("Single fixed dec per line: ");
print("c1=" + tostr(c1) + ", ");
print("c2=" + tostr(c2) + ", ");
print("c3=" + tostr(c3) + ", ");
print("c4=" + tostr(c4) + ", ");
print("c5=" + tostr(c5) + ", ");
printl("c6=" + tostr(c6));
assert(c1 == 5);
assert(c2 == "string");
assert(c3 == nil);
assert(c4 == false);
assert(c5 == true);
assert(c6 == nil);

